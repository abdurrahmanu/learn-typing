{
  "name": "kiboard",
  "description": "Typing App",
  "author": "Ahmed Abdulrahman",
  "main": "main.js",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "vite build",
    "host": "vite --host",
    "electron:start": "electron .",
    "electron:builder": "electron-builder",
    "electron:dev": "vite dev & electron ."
  },
  "build": {
    "appId": "com.ahmadabdulrahman.kiboard",
    "productName": "kiBoard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [],
    "asar": true,
    "asarUnpack": "**/*.{png,jpg,json,node}",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ],
      "icon": "build/icons/kiboard.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "kiBoard"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icons/kiboard.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icons/kiboard.png",
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://yourdomain.com/downloads/"
      }
    ]
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "chart.js": "^4.4.7",
    "firebase": "^10.14.1",
    "pinia": "^2.1.7",
    "qrcode": "^1.5.4",
    "vue": "^3.2.13",
    "vue-chartjs": "^5.3.0",
    "vue-router": "^4.0.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.1.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "vite": "^4.3.2"
  }
}
